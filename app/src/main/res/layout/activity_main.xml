<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_setting"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_title"
            android:layout_width="121dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_scan_qr1"
            app:layout_constraintBottom_toBottomOf="@id/iv_setting"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_setting" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="4.5dp"
            android:src="@drawable/ic_titile2"
            app:layout_constraintLeft_toRightOf="@id/iv_title"
            app:layout_constraintTop_toTopOf="@id/iv_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_scanner"
            android:layout_width="98.5dp"
            android:layout_height="169dp"
            android:layout_marginTop="29dp"
            android:foreground="?selectableItemBackground"
            android:background="@drawable/bg_raidus12_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_create"
            app:layout_constraintTop_toBottomOf="@id/iv_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/ic_main_scanner"
            app:layout_constraintLeft_toLeftOf="@id/iv_scanner"
            app:layout_constraintRight_toRightOf="@id/iv_scanner"
            app:layout_constraintTop_toTopOf="@id/iv_scanner" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="60dp"
            android:layout_height="19dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_tx_scanner"
            app:layout_constraintBottom_toBottomOf="@id/iv_scanner"
            app:layout_constraintLeft_toLeftOf="@id/iv_scanner"
            app:layout_constraintRight_toRightOf="@id/iv_scanner" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_create"
            android:layout_width="98.5dp"
            android:foreground="?selectableItemBackground"
            android:layout_height="169dp"
            android:background="@drawable/bg_raidus12_2"
            app:layout_constraintLeft_toRightOf="@id/iv_scanner"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_scanner" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="89dp"
            android:layout_height="89dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/ic_create_qr"
            app:layout_constraintLeft_toLeftOf="@id/iv_create"
            app:layout_constraintRight_toRightOf="@id/iv_create"
            app:layout_constraintTop_toTopOf="@id/iv_create" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="60dp"
            android:layout_height="19dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_tx_create_qr"
            app:layout_constraintBottom_toBottomOf="@id/iv_create"
            app:layout_constraintLeft_toLeftOf="@id/iv_create"
            app:layout_constraintRight_toRightOf="@id/iv_create" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>